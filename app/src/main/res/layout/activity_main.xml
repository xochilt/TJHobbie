<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/lay_closer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginBottom="20px"
        android:background="@color/colorgray"
        android:onClick="OnClick"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTodos"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Ver todos"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCloser"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Cercanos"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/lay_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="40px"
        android:onClick="OnClick"
        android:background="@color/colorgray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginTop="4px"
            android:layout_marginRight="10px"
            android:src="@mipmap/ic_restaurant"></ImageView>

        <Button
            android:id="@+id/btnRestaurant"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Restaurantes"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:onClick="onClick"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foregroundTint="#FF9800"
            android:progressTint="#FFEB3B" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_cines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:onClick="OnClick"
        android:background="@color/colorgray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginTop="4px"
            android:layout_marginRight="10px"
            android:src="@mipmap/ic_movie"></ImageView>

        <Button
            android:id="@+id/btnCines"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cines"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:onClick="onClick"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_cultura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:background="@color/colorgray"
        android:onClick="OnClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginTop="4px"
            android:layout_marginRight="10px"
            android:src="@mipmap/ic_culture"></ImageView>

        <Button
            android:id="@+id/btnCultura"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cultura"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:onClick="onClick"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_diversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:background="@color/colorgray"
        android:onClick="OnClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginTop="4px"
            android:layout_marginRight="10px"
            android:src="@mipmap/ic_familiar"></ImageView>

        <Button
            android:id="@+id/btnDiversion"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Diversion"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:onClick="onClick"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>